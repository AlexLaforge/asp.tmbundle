{
	
	/*
	SOME IDEAS & ISSUES
	- nesting of ASP (or whatever else) inside quoted strings of tags doesn't
	  work yet... Allan knows, is working on it.
	*/
	
	name = "HTML (ASP)";
	fileTypes = ( asp );
	foldingStartMarker = "(<(?i:(head|table|div|style|script|ul|ol|form|dl))\\>.*?>|\\{)";
	foldingStopMarker = "(</(?i:(head|table|div|style|script|ul|ol|form|dl))>|\\})";
	increaseIndentPattern = "<(head|title|table|tr|td|ul|ol|dl|div)\\>[^>]*>\\s*$";

	smartTypingPairs = (
	    ( "(", ")" ), ( "[", "]" ), ( "{", "}" ), ( "\"", "\"" )
	);
	 highlightPairs = (
	    ( "(", ")" ), ( "[", "]" ), ( "{", "}" ), ( "\"", "\"" )
	);

	foregroundColor = "#333333";
	backgroundColor = "#ffffff";
	patterns = (
		
		{ name = "comments.block"; begin = "<!--"; end = "-->"; foregroundColor = "#bbbbbb"; },

		{ 
		 name = "inline.javascript";
		 begin = "<script [^>]*((type=(\"|')text/javascript(\"|'))|(language=(\"|')(?i:javascript)(\"|')))[^>]*>";
		 end = "</script>";
		 backgroundColor = "#FFF6D3";
		 patterns = (
				{ include = "JavaScript"; }
			);
		},
		
		{ 
		 name = "inline.css";
		 begin = "<style .*type=(\"|')text/css(\"|')[^>]*>";
		 end = "</style>";
		 backgroundColor = "#e5F2F2";
		 patterns = (
				{ include = "CSS"; }
			);
		},
		
		{ name = "html.entities"; match = "&([a-zA-Z]+|#[0-9]+|#x[0-9a-fA-F]+);"; foregroundColor = "#6600CC"; },
		{ name = "html.entities.invalid"; match = "&"; backgroundColor = "#CC3300"; foregroundColor = "#ffffff"; },
		
		{ name = "html.tags"; begin = "</?([a-zA-Z0-9]+)"; end = ">";
  			"elementFontStyle[1]" = ( underline ); 
			foregroundColor = "#888888";
			patterns = (
	  			{ name = "html.tags.attributes"; match = " ([a-zA-Z\-]+)"; },
	  			{ name = "strings.double-quoted"; begin = "\""; end = "\"";
					patterns = (
						{	begin = "<%=?"; end = "%>";
							patterns = (
								/*{ include = "ASP"; } commented out 'till supported by TM */
							);
						},
						{ name = "html.entities"; match = "&([a-zA-Z]+|#[0-9]+|#x[0-9a-fA-F]+);"; foregroundColor = "#6600CC"; },
						{ name = "html.entities.ampersand.invalid"; match = "&"; backgroundColor = "#CC3300"; foregroundColor = "#ffffff"; },
					);
	  			},
				{ name = "strings.single-quoted"; begin = "'"; end = "'";
					patterns = (
						{	begin = "<%=?"; end = "%>";
							patterns = (
								/*{ include = "ASP"; } commented out 'till supported by TM */
							);
						},
						{ name = "html.entities"; match = "&([a-zA-Z]+|#[0-9]+|#x[0-9a-fA-F]+);"; foregroundColor = "#6600CC"; },
						{ name = "html.entities.ampersand.invalid"; match = "&"; backgroundColor = "#CC3300"; foregroundColor = "#ffffff"; },
					);
	  			},
			);
		},
		
		{ name = "html.doctype"; begin = "<!DOCTYPE"; end = ">";
  			foregroundColor = "#aaaaaa";
 		},

 		{ 
 		 name = "inline.asp";
 		 begin = "<%=?"; end = "%>";
 		 backgroundColor = "#F2F2F2";
 		 patterns = (
 				{ include = "ASP"; }
 			);
 		}

	);
}
